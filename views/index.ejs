<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Staff Listing</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<h1>Staff Listing</h1>
<a href="/add">Add New Staff</a>
<table class="table" border="1">
  <thead>
  <tr>
    <th>Index Number</th>
    <th>Full Names</th>
    <th>Email</th>
    <th>Current Location</th>
    <th>Highest Level of Education</th>
    <th>Duty Station</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% staffList.forEach(staff => { %>
    <tr>
      <td><%= staff.indexNumber %></td>
      <td><%= staff.fullNames %></td>
      <td><%= staff.email %></td>
      <td><%= staff.currentLocation %></td>
      <td><%= staff.highestLevelOfEducation %></td>
      <td><%= staff.dutyStation %></td>
      <td>
        <a href="/view/<%= staff.indexNumber %>">View</a> |
        <a href="/edit/<%= staff.indexNumber %>">Edit</a> |
        <a href="/delete/<%= staff.indexNumber %>"
           onclick="return confirm('Are you sure you want to delete this record?');">
          Delete
        </a>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>
